{
  "name": "u-documentation-api",
  "version": "1.0.0",
  "description": "Middleware API Service for Github API",
  "main": "build/index.js",
  "author": "uStudio Front-end Department",
  "scripts": {
    "start": "yarn build && cross-env NODE_PATH=./build NODE_ENV=production node build/index.js",
    "dev": "cross-env NODE_PATH=./src NODE_ENV=development nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/app.ts",
    "format": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint --quiet --color \"src/**/*.ts\"",
    "typecheck": "tsc -p ./tsconfig.json",
    "build": "yarn clear && tsc --diagnostics",
    "clear": "rimraf build"
  },
  "dependencies": {
    "rxjs": "^6.6.3",
    "dotenv": "^8.2.0",
    "rimraf": "^3.0.2",
    "fastify": "^3.11.0",
    "graphql": "^15.5.0",
    "cross-env": "^7.0.2",
    "typescript": "^4.1.3",
    "pino-pretty": "^4.0.0",
    "apollo-boost": "^0.4.9",
    "@types/pino": "^5.17.0",
    "@nestjs/core": "^7.6.6",
    "fastify-cors": "^3.0.3",
    "graphql-tag": "^2.11.0",
    "graphql-tools": "^7.0.2",
    "apollo-client": "^2.6.8",
    "@types/node": "^14.14.22",
    "@nestjs/common": "^7.6.6",
    "@nestjs/graphql": "^7.9.8",
    "fastify-swagger": "^2.5.0",
    "class-validator": "^0.13.1",
    "isomorphic-fetch": "^2.2.1",
    "class-transformer": "^0.3.2",
    "apollo-link-http": "^1.5.17",
    "reflect-metadata": "^0.1.13",
    "apollo-link-context": "^1.0.20",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-server-fastify": "^2.19.2",
    "@types/isomorphic-fetch": "^0.0.35",
    "@nestjs/platform-fastify": "^7.6.6"
  },
  "devDependencies": {
    "husky": "^4.2.1",
    "ts-node": "^8.6.2",
    "nodemon": "^2.0.2",
    "eslint": "^7.18.0",
    "prettier": "^2.2.1",
    "lint-staged": "^10.0.7",
    "eslint-plugin-unicorn": "^27.0.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-immutable": "^1.0.0",
    "eslint-plugin-boundaries": "^1.1.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint-import-resolver-typescript": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn autofix",
      "yarn autoformat",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engineStrict": true,
  "engines": {
    "node": ">=12.16.1 <13.0.0"
  },
  "license": "MIT"
}
